<%= image_tag @product.photo, width: 200 if @product.photo.attached?  %>

<h1 class= 'title'><%= @product.title %></h1>

<p class= 'description'><%= @product.description %></p>

<span class= 'price'><%= @product.price %>$</span>

<%= link_to 'Edit product', edit_product_path(@product) if @product.owner? %>

<%= link_to 'Delete product', product_path(@product), data: {
    turbo_method: :delete,
    turbo_confirm: 'You are sure?'
} if @product.owner? %>

<%= link_to 'View more products', user_path(@product.user.username)%>

<%= link_to '❤️', favorites_path(product_id: @product.id), data: {
    turbo_method: :post,
} %>